# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Payment Gateway - Razorpay (Primary for India)
VITE_RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXX
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Payment Gateway - Stripe (Backup/International)
VITE_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXX

# PayPal (Alternative Payment)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Service - SendGrid
SENDGRID_API_KEY=SG.XXXXXXXXXX

# Security & Authentication
SESSION_SECRET=your_32_character_session_secret_key
JWT_SECRET=your_jwt_secret_key

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Application Configuration
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:5000
VITE_APP_NAME=TashanWin
VITE_SUPPORT_EMAIL=support@tashanwin.com

# Feature Flags
VITE_ENABLE_REAL_PAYMENTS=false
VITE_ENABLE_KYC=true
VITE_ENABLE_RESPONSIBLE_GAMING=true

# Game Configuration
VITE_MIN_BET_AMOUNT=10
VITE_MAX_BET_AMOUNT=100000
VITE_DEFAULT_CURRENCY=INR

# Security Settings
VITE_SESSION_TIMEOUT_MINUTES=480
VITE_IDLE_TIMEOUT_MINUTES=30
VITE_MAX_LOGIN_ATTEMPTS=5

